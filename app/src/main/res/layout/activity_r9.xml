<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_r8"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dell.first3.R8">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:text="Berry Beet Smoothie"
            android:textSize="30dp"
            android:textColor="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <ImageView
            android:background="@drawable/berrybeet"
            android:layout_width="match_parent"
            android:layout_height="347dp" />
        <TextView
            android:text="Ingredients"
            android:textSize="25dp"
            android:textColor="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:textSize="20dp"
            android:text="\nBeetroot boiled, peeled and roughly chopped 1 medium\n
Blueberries fresh ½ cup\n
Strawberries fresh ½ cup\n
Honey 2 tablespoons\n
Thick yogurt 1 cup\n
Almond milk unsweetened ½ cup\n
Fresh mint sprigs for garnishing\n"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:text="Method"
            android:textSize="25dp"
            android:textColor="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
<TextView
    android:textSize="20dp"
    android:text="\nBlend together blueberries, strawberries, beetroot, honey, yogurt and almond milk till smooth. Add more milk, if required, to adjust consistency.
Pour into 4 individual glasses, garnish each glass with a mint sprig and serve chilled."
    android:layout_width="match_parent"
    android:layout_height="match_parent" />
        </LinearLayout>
    </ScrollView>
