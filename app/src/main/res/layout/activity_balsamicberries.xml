<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_balsamicberries"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dell.first3.Balsamicberries">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:text="Balsamic Berries"
        android:textSize="30dp"
        android:textColor="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <ImageView
        android:background="@drawable/balsamicberries"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <TextView
        android:textColor="@color/colorAccent"
        android:textSize="25dp"
        android:text="Ingredients"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
<TextView
    android:textSize="20dp"
    android:text="\n2/3 cup white balsamic vinegar\n
1/4 cup sugar\n
1/2 cup heavy cream, chilled\n
1/2 cup mascarpone, chilled\n
3 cups sliced strawberries\n
1/2 teaspoon lemon zest\n
pepper\n"
    android:layout_width="match_parent"
    android:layout_height="match_parent" />
    <TextView
        android:textColor="@color/colorAccent"
        android:textSize="25dp"
        android:text="Method"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
<TextView
    android:textSize="20dp"
    android:text="\nIn small saucepan, boil vinegar and 2 tbsp. sugar until reduced, 8 minutes; cool. Whip cream, mascarpone and remaining
 2 tbsp. sugar (do not overbeat).
Toss berries with syrup and lemon zest. Top with whipped cream and pepper."
    android:layout_width="match_parent"
    android:layout_height="match_parent" />
</LinearLayout>
</ScrollView>
